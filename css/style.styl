html {
    height: 100%;
    width: 100%;
}

body {
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    display: flex;
}

main {
    height: 100%;
    width: 100%;
}

h4 {
  margin-bottom: 0;
}

h4 {
  margin-bottom: 0;
}

h5 {
  margin-top: 0;
}

nav {
    width: 210px;
    height: 100%;
    background-color: #77787a;
    color: #f2f2f2;
    position: absolute;
    transform: translate(-210px, 0);
    transition: transform 0.3s ease;
}

nav.open {
    transform: translate(0, 0);
    z-index: 1;
}

a:hover {
    background-color: #239b2d;
}

li:hover {
  background-color: #282c9b;
}

#list {
  list-style-type: none;
  cursor: pointer;
}


#project {
  text-align: center;
  text-decoration: underline;
}

#searchbox {
    width: 100%;
    height: 4%;
}

@media screen and (min-width: 600px) {
    nav {
        position: relative;
        transform: translate(0, 0);
    }
    body {
        display: flex;
        flex-flow: row nowrap;
    }
    main {
        width: auto;
        flex-grow: 1;
    }
    #menuIcon {
      width: 0;
    }
}

@media screen and (max-width: 599px) {
    #menuIcon {
        width: 60px;
        background-color: #77787a;
    }
    #menu {
        font-size: 13px;
        text-align: left;
    }
    #searchText {
      margin-top: 0;
      margin-bottom: 0;
      text-align: center;
    }
}

img.burger {
  display: block;
  margin-left: auto;
  margin-right: auto;
}
